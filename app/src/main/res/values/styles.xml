<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boldTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="normalTextStyle_12">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="normalTextStyle_10" parent="@style/normalTextStyle_12">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="normalTextStyle_14" parent="@style/normalTextStyle_12">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>
    <style name="normalTextStyle_16" parent="@style/normalTextStyle_12">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
